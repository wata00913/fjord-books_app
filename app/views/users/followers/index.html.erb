<h1><%= 'フォローワ一覧' %></h1>

<%= 'フォローワーはいません。' if @other.count_follower == 0 %>
<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= User.human_attribute_name(:name) %></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @follwers.each do |follwer| %>
      <tr>
        <td><%= follwer.email %></td>
        <td><%= follwer.name %></td>
        <td><%= link_to t('views.common.show'), user_path(follwer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('views.common.back'), user_path(@other) %>
<br>
