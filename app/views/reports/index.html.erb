<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>投稿者</th>
      <th>投稿日時</th>
      <th>更新日時</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= name_or_email report.user %></td>
        <td><%= report.created_at.to_formatted_s(:long) %></td>
        <td><%= report.updated_at.to_formatted_s(:long) %></td>
        <td><%= link_to 'Show', report %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @reports %>

<%= link_to 'New Report', new_report_path %>
