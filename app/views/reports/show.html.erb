<p id="notice"><%= notice %></p>

<p>
  <strong>投稿者:</strong>
  <%= name_or_email @report.user %>
</p>

<p>
  <strong>投稿日時:</strong>
  <%= @report.created_at %>

  <strong>更新日時:</strong>
  <%= @report.updated_at %>
</p>

<p>
  <strong>タイトル:</strong>
  <%= @report.title %>
</p>


<p>
<strong>内容</strong>
</p>

<div style="border: 3px solid #cc4343; margin: 20px;">
  <% @report.content.each_line(chomp: true) do |line| %>
    <%= tag.p line %>
  <% end %>
</div>

<% if current_user == @report.user %>
  <button onclick="location.href=<%= "'#{edit_report_path(@report)}'" %>">編集</button>

  <%= button_to '削除', @report, method: :delete %> <br>
<% end %>

<h2><%= Comment.model_name.human %></h2>

<% unless @comments.empty? %>
  <% @comments.each  do |comment| %>
    <div style="border: 3px solid #cc4343; margin: 20px;">
      <p>
        <%= name_or_email comment.commenter %>
        <%= comment.updated_at %>
      </p>

      <p>
        <% comment.content.each_line(chomp: true) do |line| %>
          <%= tag.p line %>
        <% end %>
      </p>
    </div>
  <% end %>
<% end %>

<%= render 'comments/form', report: @report, new_comment: @new_comment %>

<%= link_to '戻る', reports_path %>
