<p id="notice"><%= notice %></p>

<h1><%= t('book.heading.index') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('book.attr.title') %></th>
      <th><%= t('book.attr.memo') %></th>
      <th><%= t('book.attr.author') %></th>
      <th><%= t('book.attr.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('book.action.show'), book %></td>
        <td><%= link_to t('book.action.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('book.action.destroy'), book, method: :delete, data: { confirm: t('book.message.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('book.action.new'), new_book_path %>
