<p id="notice"><%= notice %></p>

<h1><%= t('book.heading.index') %></h1>

<table>
  <thead>
    <tr>
      <th><%= @attr_locales[:title] %></th>
      <th><%= @attr_locales[:memo] %></th>
      <th><%= @attr_locales[:author] %></th>
      <th><%= @attr_locales[:picture] %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to @link_locales[:show], book %></td>
        <td><%= link_to @link_locales[:edit], edit_book_path(book) %></td>
        <td><%= link_to @link_locales[:destroy], book, method: :delete, data: { confirm: @confirm_message_locale } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to @link_locales[:new], new_book_path %>
